---
import '@fontsource-variable/roboto';
import '../styles/global-reset.scss';
import '../styles/index.scss';
import Header from '../components/react/Header/Header.tsx';
import Footer from '../components/react/Footer/Footer.tsx';

import { getCollection } from 'astro:content';
const profileData = await getCollection('portfolio');
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Wei-Han Chen's portfolio. Software engineer, open source enthusiast, and lifelong learner."
    />
    <meta property="og:title" content="Wei-Han's Portfolio" />
    <meta
      property="og:description"
      content="Wei-Han Chen's portfolio. Software engineer, open source enthusiast, and lifelong learner."
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og-image.png" />
    <title>Wei-Han's Portfolio</title>
  </head>
  <body>
    <Header client:load />
    <main class="main-content">
      {
        profileData.map((p) => (
          <section class="intro-section">
            <h1 class="intro-title">{p.data.title}</h1>
            <p class="intro-subtitle">{p.data.subtitle} </p>
            <p class="intro-description">
              {p.data.description.split('\n').map((line) => (
                <>
                  {line}
                  <br />
                </>
              ))}
            </p>
          </section>
        ))
      }
    </main>
    <Footer client:load />
  </body>
</html>
